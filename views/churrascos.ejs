<!DOCTYPE html>
<html lang="pr-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>BG | Churrascos</title>
    <link rel="icon" type="image/png" href="./img/camera-fotografica.png"/>
</head>

<body>
    <nav class="sub-menu">
        <article>
            <img src="./img/book-logo.gif" class="igm-bookdagalera" alt="Nome da logo">
            <h1>
                <a href="/">Book Da Galera</a>
            </h1>
        </article>
        <form class="form-inline">
            <input class="form-control" type="search" placeholder="Pesquisar">
            <button class="btn" type="submit">Ok</button>
        </form>
        <ul>
            <li>
                <a href="/eventos">Eventos
                    <span class="ico-seta-menu">&nbsp;</span>
                </a>
                    <ul>
                        <li><a href="/aniversarios">Aniversários</a></li>  
                        <li><a href="/baladas">Baladas</a></li>
                        <li><a href="casamentos">Casamentos</a></li>
                        <li><a href="/churrascos">Churrascos</a></li>  
                        <li><a href="/festivais">Festivais</a></li>
                        <li><a href="/happyHour">Happy hour</a></li>
                        <li><a href="/malabares">Malabares</a></li>
                        <li><a href="/reveillons">Réveillons</a></li>
                </ul>
            </li>   
            <li>
                <a href="/sobre">Sobre</a>
            </li>
            <li>
                <a href="/controle">Usuário</a>
            </li>
        </ul>
    </nav>

    <div class="titulo">
        <img src='./img/55.png'>
    </div>
<section id="book">
    <% churrascos.forEach((item, churrascos) => { %>
        <a class= "card" href="/detalhes/<%= churrascos%>">
            <img src='<%= item.imagem %>'>
            <h3>
                <p>Evento: <%= item.nome %></p>
                <p>Data: <%= item.data %></p>
                <p>Local: <%= item.local %></p>
                <p>Nome do autor: <%= item.nome %></p>
            </h3>
        <% }) %>
    </a>
    </section>
    </body>
    </html>